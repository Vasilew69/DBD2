        <form method="POST" action="/sendmessage/save">
  <input type="hidden" name="guildId" value="<%= guildId %>">

  <div class="form-check form-switch mb-2">
    <input 
      class="form-check-input" 
      type="checkbox" 
      id="isEmbed" 
      name="isEmbed" 
      value="1"
      <%= (typeof req !== 'undefined' && req.body && req.body.isEmbed) ? 'checked' : '' %>> 
    <label class="form-check-label" for="isEmbed">Embed</label>
  </div>

  <div class="form-group">
    <label for="channel">Select Channel</label>
    <select name="channel" class="form-control">
      <option value="">Select Channel</option>
      <% channels.forEach(channel => { %>
        <option value="<%= channel.id %>" <%= sMessage.channel_id === channel.id ? 'selected' : '' %>><%= channel.name %></option>
      <% }) %>
    </select>
  </div>

  <div class="mb-3">
    <label for="messageContent">Message</label>
    <textarea class="form-control" id="messageContent" name="messageContent" rows="4"><%= sMessage.message || '' %></textarea>
  </div>

  <div id="embedOptions" style="display: none;">
    <div class="mb-3">
      <label for="embedTitle">Embed Title</label>
      <input type="text" class="form-control" id="embedTitle" name="embedTitle"
        value="<%= sMessage.embedTitle || '' %>">
    </div>
    <div class="mb-3">
      <label for="embedDescription">Embed Description</label>
      <input type="text" class="form-control" id="embedDescription" name="embedDescription"
        value="<%= sMessage.embedDescription || '' %>">
    </div>
    <div class="mb-3">
      <label for="embedColor">Embed Color (Hex)</label>
      <input type="text" class="form-control" id="embedColor" name="embedColor"
        value="<%= sMessage.embedColor || '#5865F2' %>">
    </div>
    <div class="mb-3">
      <label for="embedFooter">Embed Footer</label>
      <input type="text" class="form-control" id="embedFooter" name="embedFooter"
        value="<%= sMessage.embedFooter || '' %>">
    </div>
    <div class="mb-3">
      <label for="embedAuthor">Embed Author</label>
      <input type="text" class="form-control" id="embedAuthor" name="embedAuthor"
        value="<%= sMessage.embedAuthor || '' %>">
    </div>
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
</form><br>

